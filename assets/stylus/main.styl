@import "variables"
@import "mixins"

html
	font-size fontReset

body
	font-size defaultFontSize
	line-height defaultLineHeight
	font-family defaultFontFamily

*
	-moz-box-sizing border-box
	box-sizing border-box


/* =RESETS */
body, dl, dd, dt, p, h1, h2, h3, h4, h5, h6, img, blockquote, form, fieldset
	margin 0
	padding 0
	border 0
	list-style none

html, body
	height 100%

body
	color colour6

section
	margin-bottom (baselineGrid * 4)

header
	padding-top (baselineGrid * 4)
	padding-bottom (baselineGrid * 4)
	> span
		display block
		margin auto
		text-align center
		padding-bottom (baselineGrid * 4)

footer
	a
		display inline-block
		margin-right .5em
		text-decoration none
		font-size (defaultFontSize + 0.4)	//20px

code
	color colour4
	font-size (defaultFontSize - 0.4)		//12px
	font-family Monaco, Courier, monospace

iframe
	margin (baselineGrid * 4) 0

h1, h2, h3, h4, h5, h6
	color colour5

a
	color colour4
	text-decoration none
	transition color .3s linear 0
	&:hover
		color colour5
	
*:focus
	outline 2px solid colour1

p
	margin-bottom (baselineGrid * 4)

p:last-of-type + *
	margin-top (baselineGrid * 4)

p:last-of-type
	margin-bottom 0

li:not(:last-of-type)
	padding-bottom (baselineGrid * 4)

li p
	padding-bottom 0

ol[id^=Lighter]
	list-style-position outside

blockquote
	margin-bottom (baselineGrid * 4)
	margin-left 50px
	font-style italic
	color colour5
	&:before
		position absolute
		margin-left -2%
		content "\275d"

img
	max-width 100%

.offset
	position absolute
	left -9999px

.more 
	font-weight bold
	text-transform uppercase
	font-family altFontFamily1

// NAVIGATION
.navigation
	padding verticalSpacing 0
	background-color white
	ul
		display table
		width 94%
		margin 0 auto
		padding-left 0
		text-transform uppercase
		border-bottom 2px solid lighten(colour6, 70%)
		li
			display table-cell
			padding-bottom verticalSpacing
			font-family altFontFamily1
			> * 
				display block
				text-align center
			> a, > span
				font-weight bold
				small
					display none
					font-weight normal
			> a small, > span small
				color colour6
			&.selected
				a
					color colour6

// STICKY MENU
.fixed
	height 157px
	nav
		position fixed
		top 0
		z-index 10
		width 100%
		background-color colour2


/* Posts list */
.posts
	h2 span
		margin-left horizontalSpacing
		font-size defaultFontSize

/* Portfolio */
.portfolio
	padding-top (baselineGrid * 3)
	text-align center
	li
		position relative
		margin-bottom (baselineGrid * 3)
		padding-bottom 0
		list-style none
		overflow hidden
		img
			display block
			transition opacity .2s linear .3s
			-webkit-transform translateZ(0)
			-moz-transform translateZ(0)
			transform translateZ(0)
			max-width 100%
			width 100%
		h2
			position absolute
			top 40%
			width 100%
			padding 0
			font-weight bold
			font-size (defaultFontSize + .4)
			text-align center
			transition all .2s linear .3s
			-webkit-transform scale(5)
			-moz-transform scale(5)
			transform scale(5)
			opacity 0
			a
				font-weight normal
		&:hover h2
			-webkit-transform scale(1)
			-moz-transform scale(1)
			transform scale(1)
			opacity 1
			> a
				color colour4
		&:hover img
			opacity .4

/* Post paging */
.paging
	margin (baselineGrid * 3) 0 (baselineGrid * 4)
	text-transform uppercase
	font-weight bold
	font-family altFontFamily1
	&::after
		clearfix()
	a, span
		float left
		width 50%
		text-align center
	small
		display block

// NO FLEXBOX
.no-flexbox
	.portfolio
		li
			display inline-block
			vertical-align top
			margin-right (baselineGrid * 3) + .2

// FLEXBOX
.flexbox .portfolio
	display -webkit-flex
	-webkit-justify-content space-around
	-webkit-flex-wrap wrap
	display flex
	justify-content space-around
	flex-wrap wrap
