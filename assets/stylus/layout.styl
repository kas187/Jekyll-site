@import "variables"
@import "mixins"

// STRUCTURE
#container
	max-width 94%
	margin 0 auto
	padding 0 0 (baselineGrid * 5)

.content
	padding-bottom (baselineGrid * 5)

.flexbox .post {	
	display -webkit-flex
	display flex
	-webkit-flex-direction colummn
	flex-direction column
	.paging {
		-webkit-order 2
		order 2
	}
}

// MOBILES
@media only screen and (max-width: 320px)
	.navigation
		float none
		ul
			float none
			li
				display block
				a
					display block
					padding-left 0
				> *
					padding (baselineGrid * 2) 0

	.portfolio li
		float none
		margin-right 0
		width 100%

// ADJUST SITE WIDTH, NAVIGATION WIDTH & PORTFOLIO STYLES (NO FLEXBOX)
@media only screen and (min-width: 829px)
	// STRUCTURE
	#container
		width 60%

	.navigation ul
		width 80%



// ADJUST NAVIGATION
@media only screen and (min-width: 720px)
	.navigation ul li a small, .navigation ul li span small
		display block

